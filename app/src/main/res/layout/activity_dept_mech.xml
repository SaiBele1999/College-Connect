<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:visibility="visible"
            android:id="@+id/txt_Dept_Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department of Mech"
            android:textSize="30sp"
            android:textColor="#000"
            android:gravity="center"
            android:background="@color/subject_bg"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/img_dept_cover"
            android:layout_below="@id/txt_Dept_Header"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:src="@drawable/mech_lab"/>

        <LinearLayout
            android:layout_below="@id/img_dept_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:visibility="visible"
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="Vision of the Department"
                android:textStyle="bold"
                android:textColor="#fff"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:onClick="btn1_click" />
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E57373">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" \u25CF   To be a center of excellence in offering value based and futuristic quality technical education in the field of mechanical engineering"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <Button
                android:visibility="visible"
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="Mission of the Department"
                android:textStyle="bold"
                android:textColor="#fff"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:onClick="btn2_click" />
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E57373">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" \u25CF   Impart quality technical education imbibed with values by providing state of the art laboratories and effective teaching and learning process"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" \u25CF   Produce industry ready mechanical engineering graduates with advanced technical and lifelong learning skills"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" \u25CF   Prepare graduates for higher learning and research in mechanical engineering and its allied areas"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"/>



            </LinearLayout>

            <Button
                android:visibility="visible"
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="Head of Department"
                android:textStyle="bold"
                android:textColor="#fff"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:onClick="btn3_click" />
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E57373">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prof.N.Jeevan Kumar"
                        android:textSize="19sp"
                        android:textStyle="bold|italic"
                        android:textColor="#000"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="203dp"
                        android:src="@drawable/mech_hod" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="Mech Faculty for ACADEMIC YEAR 2016-17"
                android:textStyle="bold"
                android:textColor="#fff"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:onClick="btn4_click" />
            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E57373">

            </LinearLayout>

            <Button
                android:visibility="visible"
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="Laboratories"
                android:textStyle="bold"
                android:textColor="#fff"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:onClick="btn5_click" />
            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E57373">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Engineering Workshop"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Mechanics of Solids"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Metallurgy Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Thermal Engineering Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Mechanics Of Fluids And Hydraulic Machines Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Heat Transfer Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Production Technology Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   CAD/CAM Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Instrumentation Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Machine Tools"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Metrology Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   Project Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" \u25CF   ATL Lab"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    </ScrollView>


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            ads:adSize="BANNER"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adUnitId="@string/cmrec_ad_mob_banner">
        </com.google.android.gms.ads.AdView>


</LinearLayout>