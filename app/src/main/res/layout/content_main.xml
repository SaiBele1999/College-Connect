<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ior.cmreclh.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/layout_background">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/std_detail_header"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/round_corner_btn">
            <TextView
                android:id="@+id/txt_Regulation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:fontFamily="serif"
                android:text="Regulation"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/transparentBG"
                />
            <TextView
                android:id="@+id/txt_Year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:fontFamily="serif"
                android:text="Year"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/transparentBG"/>
            <TextView
                android:id="@+id/txt_Sem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:text="Sem"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/transparentBG"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/std_detail_header"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_syllabus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/img_syllabus_thumb"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SYLLABUS"
                                android:textSize="18sp"
                                android:fontFamily="serif"
                                android:textStyle="bold"
                                android:textColor="@color/lite_black"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_materials"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/img_materials_thumb"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MATERIALS"
                                android:textSize="18sp"
                                android:fontFamily="serif"
                                android:textStyle="bold"
                                android:textColor="@color/lite_black"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_model_papers"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/img_model_paper_thumb"
                                android:id="@+id/imageView"
                                android:scaleType="fitCenter"
                                android:layout_marginTop="5dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MODEL PAPERS"
                                android:textSize="18sp"
                                android:fontFamily="serif"
                                android:textStyle="bold"
                                android:textColor="@color/lite_black"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_updates"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/img_updates_thumb"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="UPDATES"
                                android:textSize="18sp"
                                android:fontFamily="serif"
                                android:textStyle="bold"
                                android:textColor="@color/lite_black"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:visibility="gone"
                android:text="SYLLABUS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSyllabus"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:background="@drawable/round_corner_btn"
                android:textColor="@color/transparentBG"
                android:layout_margin="10dp"
                />

            <Button
                android:visibility="gone"
                android:text="MATERIALS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnMaterial"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:background="@drawable/round_corner_btn"
                android:textColor="@color/transparentBG"
                android:layout_margin="10dp"
                />

            <Button
                android:visibility="gone"
                android:text="MODEL PAPERS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnModerPaper"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:background="@drawable/round_corner_btn"
                android:textColor="@color/transparentBG"
                />

            <Button
                android:visibility="gone"
                android:text="UPDATES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnUpdates"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:background="@drawable/round_corner_btn"
                android:textColor="@color/transparentBG"/>


        </LinearLayout>
        </ScrollView>

        </LinearLayout>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/editTextBG"
        android:src="@drawable/settings_icon"
        app:fabSize="normal"
        app:backgroundTint="@color/transparentBG"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>
